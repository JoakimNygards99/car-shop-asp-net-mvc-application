@model List<Car>

<div class="mt-5">s</div>
<div class="mt-3">s</div>

<div class="card shadow border-0">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="test-white py-2">
                    Car
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Admin" asp-action="Upload" class="btn btn-primary">
                    <i class="bi bi-patch-plus"></i> Create New Car
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <!--thead är columner-->
            <thead>
                <tr>
                    <th>
                        Model
                    </th>
                    <th>
                        MotorFuel
                    </th>
                    <th>
                        GearBox
                    </th>
                    <th>
                        Colour
                    </th>
                    <th>
                        Mileage
                    </th>
                    <th>
                        ModelYear
                    </th>
                    <th>
                        HorsePower
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Path
                    </th>
                    <th>
                        Edit / Delete
                    </th>
                    
                </tr>
            </thead>
            <!--tbody är alla rows-->
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Model</td>
                        <td>@obj.MotorFuel</td>
                        <td>@obj.GearBox</td>
                        <td>@obj.Colour</td>
                        <td>@obj.Mileage</td>
                        <td>@obj.ModelYear</td>
                        <td>@obj.HorsePower</td>
                        <td>@obj.Price</td>
                        <td>@obj.Description</td>
                        <td>@obj.Path</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Admin" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"> Edit</i>
                                </a>

                                <a asp-controller="Admin" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash"> Delete</i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

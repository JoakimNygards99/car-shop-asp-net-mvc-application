@model Car 

<div class="mt-5">s</div>
<div class="mt-3">s</div>

<div class="card mt-5 mt-3 shadow border-0">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-light py-2">
                    Create Car
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
              

                <div class="form-floating py-2 col-12">
                    <input asp-for="Model" class="form-control border-0 shadow" />
                    <label asp-for="Model" class="ms-2 text-dark"></label>
                    <span asp-validation-for="Model" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="MotorFuel" class="form-control border-0 shadow" />
                    <label asp-for="MotorFuel" class="ms-2 text-dark"></label>
                    <span asp-validation-for="MotorFuel" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="GearBox" class="form-control border-0 shadow" />
                    <label asp-for="GearBox" class="ms-2 text-dark"></label>
                    <span asp-validation-for="GearBox" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Colour" class="form-control border-0 shadow" />
                    <label asp-for="Colour" class="ms-2 text-dark"></label>
                    <span asp-validation-for="Colour" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Mileage" class="form-control border-0 shadow" />
                    <label asp-for="Mileage" class="ms-2 text-dark"></label>
                    <span asp-validation-for="Mileage" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="ModelYear" class="form-control border-0 shadow" />
                    <label asp-for="ModelYear" class="ms-2 text-dark"></label>
                    <span asp-validation-for="ModelYear" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="HorsePower" class="form-control border-0 shadow" />
                    <label asp-for="HorsePower" class="ms-2 text-dark"></label>
                    <span asp-validation-for="HorsePower" class="text-danger"></span>
                </div>


                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" class="form-control border-0 shadow" />
                    <label asp-for="Price" class="ms-2 text-dark"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>


                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2 text-dark"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>

                    <div class="col-6 col-md-3">
                        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to Car List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>




@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
